{
  "root": "railway.json",
  "name": "openclaw-control-center",
  "services": {
    "postgres": {
      "type": "database",
      "provider": "postgres",
      "name": "openclaw-postgres"
    },
    "redis": {
      "type": "database", 
      "provider": "redis",
      "name": "openclaw-redis"
    },
    "web": {
      "type": "web",
      "name": "openclaw-control-center",
      "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
      },
      "deploy": {
        "startCommand": "./start.sh",
        "healthcheckPath": "/api/health",
        "healthcheckPort": 3000,
        "healthcheckTimeout": 300,
        "numReplicas": 1
      },
      "envs": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "DATABASE_URL": "${{ postgres.DATABASE_URL }}",
        "DIRECT_URL": "${{ postgres.DIRECT_URL }}",
        "REDIS_URL": "${{ redis.REDIS_URL }}",
        "NEXTAUTH_URL": "${{ RAILWAY_PUBLIC_DOMAIN }}"
      }
    }
  }
}